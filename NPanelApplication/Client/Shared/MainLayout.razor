@inherits LayoutComponentBase
@inject NavigationManager navigationManager

@if (true)
{
    <div class="page" dir="rtl">
        <div class="sidebar">
            <NavMenu />
        </div>

        <div class="main">
            <div class="content px-4">
                @Body
            </div>
        </div>
    </div>
}
else
{
    GetLogin();
}

@code{
    protected void GetLogin()
    {
        navigationManager.NavigateTo("login");
    }
}
