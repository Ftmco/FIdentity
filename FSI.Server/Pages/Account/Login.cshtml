@page

@model FSI.Server.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}


<div style="margin:50px">
    <h3 class="text-center">Login F Identity</h3>
    <div class="card">
        <div class="card-body">
            <span class="text-danger">@ViewData["Err"]</span>
            <form class="form-horizontal form-material" asp-page-handler="Login" method="post">
                <div class="form-group mb-4">
                    <label class="col-md-12 p-0" asp-for="@Model.Login.Email"></label>
                    <div class="col-md-12 border-bottom p-0">
                        <input asp-for="@Model.Login.Email"
                               class="form-control p-0 border-0">
                        <span asp-validation-for="@Model.Login.Email"></span>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label class="col-md-12 p-0" asp-for="@Model.Login.Password"></label>
                    <div class="col-md-12 border-bottom p-0">
                        <input asp-for="@Model.Login.Password" class="form-control p-0 border-0">
                        <span asp-validation-for="@Model.Login.Password"></span>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label class="col-md-12 p-0" asp-for="@Model.Login.RememberMe"></label>
                    <div class="col-md-12 border-bottom p-0">
                        <input asp-for="@Model.Login.RememberMe" />
                    </div>
                </div>

                <div class="form-group mb-4">
                    <div class="col-sm-12">
                        <button class="btn btn-success">Login</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>